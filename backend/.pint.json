{
  "preset": "laravel",
  "rules": {
    "array_syntax": {
      "syntax": "short"
    },
    "single_quote": true,
    "no_unused_imports": true,
    "no_extra_blank_lines": true,
    "no_superfluous_phpdoc_tags": true
  },
  "exclude": [
    "vendor",
    "storage",
    "bootstrap/cache",
    "public",
    "composer.lock"
  ]
}