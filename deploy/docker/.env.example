# SSL Manager Docker 环境配置
# 复制此文件为 .env 并修改配置

# === 数据库配置 ===
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=ssl_manager
DB_USERNAME=ssl_manager
DB_PASSWORD=__DB_PASSWORD__

# === Redis 配置 ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# === 端口配置 ===
HTTP_PORT=80
# HTTPS_PORT=443

# === MySQL 容器配置（使用容器化 MySQL 时需要）===
MYSQL_ROOT_PASSWORD=__DB_PASSWORD__

# === 应用配置 ===
APP_ENV=production
APP_DEBUG=false
