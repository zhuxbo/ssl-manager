{
  "build": {
    "npm_registry": "https://registry.npmmirror.com",
    "composer_mirror": "https://mirrors.aliyun.com/composer/",
    "min_php_version": "8.3",
    "min_node_version": "22",
    "release": {
      "gitee": {
        "owner": "zhuxbo",
        "repo": "cert-manager"
      }
    },
    "git_user": {
      "name": "zhuxbo",
      "email": "zhuxbo@qq.com"
    }
  },
  "exclude_patterns": {
    "backend": [
      ".git/",
      ".github/",
      ".gitignore",
      ".gitattributes",
      ".editorconfig",
      ".pint.json",
      ".cursor/",
      ".idea/",
      ".vscode/",
      ".DS_Store",
      ".env",
      ".env.backup",
      ".env.local",
      ".env.production",
      ".env.prod",
      ".phpunit.cache/",
      ".phpunit.result.cache",
      ".phpstorm.meta.php",
      "_ide_helper.php",
      "_ide_helper_models.php",
      "storage/debugbar/",
      "tests/",
      "phpunit.xml",
      "phpstan.neon",
      "*.log",
      "README.md",
      "LICENSE",
      "INSTALL.md",
      "DATABASE_SYNC.md",
      "JRE_INSTALL.md"
    ]
  },
  "package": {
    "full": {
      "exclude": [
        "backend/vendor/",
        "backend/storage/upgrades/",
        "backend/storage/backups/",
        "backend/storage/logs/*.log",
        "backend/storage/framework/cache/*",
        "/config.json"
      ]
    },
    "upgrade": {
      "exclude": [
        "backend/.env",
        "backend/.env.*",
        "backend/storage/*",
        "backend/bootstrap/cache/*",
        "backend/vendor/",
        "backend/public/install.php",
        "backend/public/install-assets/",
        "frontend/admin/logo.svg",
        "frontend/admin/platform-config.json",
        "frontend/user/logo.svg",
        "frontend/user/platform-config.json",
        "frontend/user/qrcode.png",
        "frontend/easy/config.json"
      ]
    }
  }
}
